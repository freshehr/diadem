	openEHR-EHR-COMPOSITION.event_summary.v1

concept
	[at0000]

language
	original_language = <[ISO_639-1::en]>

description
	original_author = <
		["date"] = <"2012-01-31">
		["name"] = <"Sistine Barretto-Daniels">
